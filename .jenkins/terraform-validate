pipeline {
  agent {
    docker { 
      image 'hashicorp/terraform:latest' 
      args '--entrypoint=\'\' -u root'
    }
  }

  stages {
    stage('terraform init') {
      steps {
        sh 'terraform init'
      }
    }
    
    stage('terrform validate') {
      steps {
        sh 'terraform validate'
      }
    }
  }
  post {
        always {
            // Cleanup
            cleanWs()
        }
    }
}